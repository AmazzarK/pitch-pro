{
  "testEnvironment": "node",
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "routes/**/*.js",
    "services/**/*.js",
    "utils/**/*.js",
    "!**/node_modules/**"
  ],
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "setupFilesAfterEnv": [
    "./tests/setup.js"
  ]
}
